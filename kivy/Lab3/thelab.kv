# Declare variables
#:set s dp(150)

<CanvasExample1>:
    canvas:
        Rectangle:
            # pos: dp(150), dp(200)
            # pos: self.center
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            # points: (x, y, x2, y2, x3, y3)
            # points: (0, 0, 100, 100, self.width, 100)
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width, 0)
            width: 3

<CanvasExample2>:
    canvas:
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 2
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 2


<CanvasExample3>:
    canvas:
        Color:
            # rgb: 1, 0, 0
            rgba: 1, 0, 0, .3
        Line:
            circle: (200, 200, 100) # center_x, center_y, radius
            width: 2
        Line:
            ellipse: (400, 400, 100, 200) # center_x, center_y, radius_x, radius_y
            width: 2

        Color:
            rgba: 0, 1, 0, .75
        Line:
            rectangle: (500, 100, 100, 200) # x, y, width, height
            width: 2


